{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "extends": [
    "eslint:recommended", 
    "standard"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2021
  },
  "rules": {
    "quotes": [
      "error",
      "double",
      {
        "templateLiterals": true
      }
    ],
    "space-before-function-paren": "off",
    "yoda": "error",
    "eqeqeq": "warn",
    "prefer-const": "error",
    "no-var": "error"
  }
}